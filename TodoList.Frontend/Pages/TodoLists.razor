@page "/TodoList"
@inherits TodoListsBase

@if (!isDataReady)
{
<span>Loading ...</span>
}
else
{


    <button type="button" @onclick="@(() => navManager.NavigateTo("/Todolist/Create"))" class="btn btn-primary mb-2">Create New</button>
    <div class="row">
        @foreach (var mList in toDos)
        {
            <div class="pr-1 col-lg-3 pb-2">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@mList.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@mList.Description</h6>
                        <a href="#" class="card-link" @onclick="@(() => navManager.NavigateTo($"/TaskList/{@mList.ID}"))">View</a>
                        @*<a href="#" class="card-link text-danger" @onclick="@(() => navManager.NavigateTo("/"))">Delete</a>*@
                    </div>
                </div>
            </div>
        }
    </div>


}



    