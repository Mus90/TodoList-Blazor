@page "/"
@inherits TodoListsBase

<button type="button" @onclick="@(()=>navManager.NavigateTo("/Todolist/Create"))" class="btn btn-primary mb-2">Create New</button>
<div class="row">
    @for (int i = 0; i < 5; i++)
    {
        <div class="pr-1 col-lg-3 pb-2">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="card-link" @onclick="@(()=>navManager.NavigateTo("/TaskList"))">View</a>
                    <a href="#" class="card-link text-danger" @onclick="@(()=>navManager.NavigateTo("/"))">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
